<% if(errors.length > 0){ %>
    <div class="notification is-danger">
        <% errors.forEach(erro => { %>
            <%= erro %><br>
        <% }) %>
    </div>
<% } %>

<% if(success.length > 0){ %>
    <div class="notification is-primary">
        <% success.forEach(success => { %>
            <%= success %><br>
        <% }) %>
    </div>
<% } %>

<% if(modal.length > 0){ %>
    <div class="modal is-active">
    <div class="modal-background"></div>
    <div class="modal-card">
      <section class="modal-card-body">
        <div class="columns">
          <div class="column">
              <h1 class="title is-5" style="text-align: center;">
                  Para acessar essa parte do site é necessário primeiro
                  fazer seu login! Vamos nessa!?
              </h1>
              <figure class="image">
                  <img class="" src="./assets/imgs/back-pensativo.svg" style="height: 16rem;"/>
                </figure>
          </div>
        </div>
      </section>
      <footer class="modal-card-foot" style="border: none;background-color: none;display: block;">
          <div class="columns">
              <div class="column is-2"></div>
              <div class="column is-4">
                  <button class="button is-warning" style="font-size: 1.2rem !important;background-color: #f14668 !important;font-weight: 400;">Deixa pra depois</button>
              </div>
              <div class="column is-4">
                  <form action="/login">
                      &nbsp;<button class="button" style="font-size: 1.2rem !important;background-color: #48c78e !important;font-weight: 400;">Bora! :D</button>
                  </form>
              </div>
              <div class="column is-2"></div>
          </div>        
      </footer>
    </div>
    </div>
<% } %>