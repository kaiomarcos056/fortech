<!-- INICIO MENU -->

<nav class="navbar">
  <div class="container">
    
      <div class="columns is-vcentered">
        <div class="column is-2">
          <a href="/">
            <img src="../assets/imgs/logo-ufeed-bar.svg" class="img-logo" style="
            width: 40rem !important;
        "/>
          </a>
        </div>
        <div class="column is-6">
          <form action="/professorPesquisa" method="post" style="display: flex;">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <input class="input is-rounded" type="text" name="nomeProf" placeholder="Pesquise por Disciplinas ou Professores..." />
              <button class="button is-rounded">
                <span class="icon is-small is-right">
                  <i class="fa-solid fa-magnifying-glass"></i>
                </span>
              </button>
          </form>
        </div>
        <div class="column">
          <a href="/professor" class="navbar-item">Professores</a>
        </div>
        <div class="column">
          <a href="/cadeiras/1" class="navbar-item">Disciplinas</a>
        </div>
        <div class="column">
          <div class="navbar-item has-dropdown is-hoverable">
            <% if(!user) {%>
              <a class="navbar-link">
                <button class="button is-rounded" style="background: #485df2 !important;width: 0rem">
                  <span class="icon is-small is-right">
                    <i class="fa-solid fa-user"></i>
                  </span>
                </button>
              </a>
              <div class="navbar-dropdown">
                <a href="/login" class="navbar-item">Logar</a>
                <a href="/cadastro" class="navbar-item">Cadastrar</a>
              </div>
              <% } else{%>
                <a href="/logout" class="navbar-item">Sair &nbsp;<i class="fa-solid fa-right-from-bracket"></i></a>
              <% } %>
          </div>
        </div>
      </div>
    
  </div>
</nav>

